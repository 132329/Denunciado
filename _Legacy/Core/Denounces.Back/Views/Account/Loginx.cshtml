@model Denounces.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Inicio de Sesion";
     Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

 
<div class="block-center mt-4 wd-xl">
    <!-- START card-->
    <div class="card card-flat">
        <div class="d-flex justify-content-center ">
            <div class="p-2">
                <img class="img-fluid img-thumbnail rounded-circle" src="~/images/logo.png" alt="Logo Mersy" width="200" height="100" />
            </div>
        </div>
        @*<div class="card-header text-center bg-dark">
            <a href="#">
                <img class="block-center rounded" src="~/images/SmallLogoMercy.jpg" alt="Image" style="width:250px;height:100px" />
            </a>
        </div>*@
        <div class="card-body">
            <p class="text-center py-2">INICIA SESION PARA CONTINUAR</p>
            <form class="mb-3" id="loginForm" novalidate="novalidate" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <div class="input-group with-focus">
                        <input class="form-control border-right-0"
                               id="exampleInputEmail1" type="email"
                               placeholder="Digite un Email"
                               autocomplete="off" required="required" autofocus
                               asp-for="Username" />
                        <div class="input-group-append">
                            <span class="input-group-text text-muted bg-transparent border-left-0">
                                <em class="fa fa-envelope"></em>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group with-focus">
                        <input class="form-control border-right-0"
                               id="exampleInputPassword1"
                               type="password" placeholder="Password"
                               required="required"
                               asp-for="Password" />
                        <div class="input-group-append">
                            <span class="input-group-text text-muted bg-transparent border-left-0">
                                <em class="fa fa-lock"></em>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="clearfix">
                    <div class="checkbox c-checkbox float-left mt-0">
                        <label>
                            <input type="checkbox" value="" name="remember" asp-for="RememberMe" />
                            <span class="fa fa-check"></span>Recordarme en este equipo
                        </label>
                    </div>
                    <div class="float-right">
                        
                    </div>
                </div>
                <button class="btn btn-block btn-primary mt-3" type="submit" >Acceder</button>
            </form>
            @*<p class="pt-3 text-center">Need to Signup?</p>
            <a class="btn btn-block btn-secondary" href="@Url.Action("Register", "Pages")">Register Now</a>*@
        </div>
    </div>
    <!-- END card-->
    <div class="p-3 text-center">
        <span class="mr-2">&copy;</span>
        <span>2019 Mersy Core</span>
        <span class="mr-2">-</span>
        <span>By PraySoft</span>
        <br />
        <span>Sistema de Administración de Información Digital</span>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

