
@model Zone

@{
    ViewData["Title"] = "Eliminar Zona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Delete" enctype="multipart/form-data">
    <div class="container-fluid">
        <h1>
            Está seguro de eliminar este registro y todos sus detalles?
        </h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <input type="hidden" asp-for="Id"/>
        <div class="row ">
            <div class="col-sm-4">
                <label asp-for="Name" class="control-label">Nombre   <a style="color:red">(*)</a></label>
                <input readonly="readonly" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
       
 
        <br /><br />
        <div class="row text-center">
            <div class=" col-sm-12">

                <a asp-action="Index" class="btn btn-lg btn-warning">
                    <i class="fa fa-times "></i> Cancelar y Volver Atras
                </a>
                <button type="submit" class="btn btn-lg btn-primary">
                    <i class="fa fa-save"></i>       Eliminar y Procesar Cambios
                </button>
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}



